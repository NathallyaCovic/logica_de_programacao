  default:
    console.log("Idade inválida.")
}
Exercício 14
let categoria = prompt("Digite a categoria\n1- básico \n2- intermediário\n3- avançado\n:")

switch (categoria) {
  case "1":
    console.log("Exercícios com operações simples.")
    break
  case "2":
    console.log("Exercícios com frações e equações.")
    break
  case "3":
    console.log("Exercícios com álgebra e cálculo.")
    break
  default:
    console.log("Categoria inválida.")
}

