  case "1":
    console.log("Urgência Baixa")
    break
  case "2":
    console.log("Urgência Média")
    break
  case "3":
    console.log("Urgência Alta")
    break
  default:
    console.log("Nível inválido.")
}
Exercício 5
let categoria = prompt("Digite a categoria (compacto, suv, caminhão)")

switch (categoria) {
  case "compacto":
    console.log("Veículo compacto selecionado.")
    break
  case "suv":
    console.log("SUV selecionado.")
    break
  case "caminhão":
    console.log("Caminhão selecionado.")
    break
  default:
    console.log("Categoria inválida.")
}
Exercício 6
let horas = prompt("Digite o número de horas estacionadas")

switch (true) {
  case (horas <= 1):
    console.log("Tarifa: R$ 5,00")
    break
  case (horas <= 4):
    console.log("Tarifa: R$ 10,00")
    break
  case (horas > 4):
    console.log("Tarifa: R$ 20,00")
    break
  default:
    console.log("Valor inválido.")
}
Exercício 7
let dificuldade = prompt("Escolha a dificuldade (1, 2 ou 3)")

