Exercício 10
let idade = prompt("Digite a idade")

switch (true) {
  case (idade < 18):
    console.log("Exercício fácil recomendado.")
    break
  case (idade <= 25):
    console.log("Exercício intermediário recomendado.")
    break
  case (idade <= 40):
    console.log("Exercício pesado.")
    break
  case (idade > 40):
    console.log("Exercício leve recomendado.")
    break
  default:
    console.log("Idade inválida.")
}
Exercício 11
let genero = prompt("Digite o gênero musical (rock, samba, clássico)")

switch (genero) {
  case "rock":
    console.log("Instrumento: Guitarra")
    break
  case "samba":
    console.log("Instrumento: Pandeiro")
    break
  case "clássico":
    console.log("Instrumento: Violino")
    break
  default:
    console.log("Gênero não reconhecido.")
}
Exercício 12
let area = prompt("Digite a área \n1- front-end \n2- back-end\n3- mobile\n:")

switch (area) {
  case "1":
    console.log("Curso: HTML, CSS e JavaScript")
    break
  case "2":
    console.log("Curso: bancos de dados")
    break
  case "3":
    console.log("Curso: React Native ou Flutter")
    break
  default:
    console.log("Área inválida.")
}
Exercício 13
