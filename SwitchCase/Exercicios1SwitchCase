    break
  case "2":
    console.log("Você escolheu Médio")
    break
  case "3":
    console.log("Você escolheu Difícil")
    break
  default:
    console.log("Opção inválida.")
}
Exercício 8
let servico = prompt("Digite o serviço (yoga, musculação, personal)")

switch (servico) {
  case "yoga":
    console.log("Aula de Yoga selecionada. começa na terça")
    break
  case "musculação":
    console.log("Musculação selecionada. começa na quarta")
    break
  case "personal":
    console.log("Personal Trainer selecionado. começa na sexta")
    break
  default:
    console.log("Serviço inválido.")
}
